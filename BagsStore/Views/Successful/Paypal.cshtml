@model BagsStore.Models.Reservation
@{
                /**/

                ViewBag.Title = "Terms";
}

<div class="breadcrumb-section">

</div>

<div class="page-wrapper">

    <div class="container">

        <div class="row">

            <div class="col-md-12">
                <div style="right:10px;float:right">
                    <a href="/Admin/DownloadPDF/@Model.Id">
                        <img src="~/Images/pdff.ico" width="40" height="40" />
                        BOOKING CONFIRMATION
                    </a>
                </div>
                <div style="clear:left">
                    <h4 class="text" style="float:left;width:30%">
                        Thank you<br />
                        FOR YOUR BOOKING!
                    </h4>
                    <div style="float:left;width:40%">
                        <img src="~/Images/70x50.png" style="width:20%" />
                    </div>

                    <br />
                </div>
                <br /><br /><br />

                <div class="row">

                    <div class="col-md-4">

                        <p style="font-weight:bold">
                            YOUR BOOKING DETAILS
                        </p>

                        <p>
                            <b>Name and last name:</b> @Model.Name @Model.Surname
                        </p>
                        <p>
                            <b>Order n°:</b>  #@(Model.Id + 100)
                        </p>

                        <p>
                            <b>Paid:</b> €@Model.Price
                        </p>

                        <p>
                            <b>Drop off</b> : @Model.DropOff
                        </p>

                        <p>
                            <b>Pick Up</b> : @Model.PickUp
                        </p>

                        <p>
                            <b>Bags</b>: @Model.Bags
                        </p>

                    </div>

                    <div class="col-md-8">
                        <div style="text-align:center">
                            <img src="~/Images/@Model.MapPicture" width="300" height="170" />
                        </div>
                    </div>

                </div>

                <hr />
                <p style="font-weight:bold">
                    GO HERE TO STORE YOUR BAGS
                </p>

                <p>
                    <b>Shop name</b> : @Model.StoreName
                </p>

                <p>
                    <b>Address</b>: @Model.Street
                </p>

                <p>
                    Open in <a href="@Model.Link">Google Maps</a>
                    (<a href="@Model.Link">@Model.Link</a>)
                </p>
                <p>
                    Opening times: @Model.WHours
                </p>
                <hr />
                <p style="font-weight:bold">
                    SHOP CONTACT DETAILS
                </p>

                <p>
                    <b>Telephone number</b> : +386 51 847 142
                    <img src="~/Images/whatsapp.png" width="22" height="22" />
                    <img src="~/Images/viber.png" width="18" height="18" />
                    <img src="~/Images/telegram.png" width="18" height="18" />
                </p>

                <p>
                    <b>Email</b> : @Model.EmailConf
                </p>
                <hr />
                <p style="font-weight:bold">
                    ADDITIONAL INFORMATION
                </p>

                <p>
                    P.S. Some of our LuggagePoints offer discount for their services. Ask them!
                </p>
                <br /><br />
                <p style="font-weight:bold;text-align:center">
                    Problems or questions?
                </p>

                <div>
                    <span style="float:left;width:20%;margin-top:-66px">
                        <img src="~/Images/pdf3.png" />
                    </span>

                    <span style="float:left;width:80%">
                        Please contact us at info@bagtostore.com
                        or use the chat support on website:
                        <a href="https://bagtostore.com">bagtostore.com</a>.
                    </span>
                </div>


            </div>



        </div>

        <div class="row mt-5">

            <div class="col-md-12">
                <a style="float:right; color:#63A13C; font-weight:bold;" href="/"><< Back</a>
            </div>

        </div>

    </div>

</div>