        <!-- Main -->
        <div id="main">
            <div class="cl">&nbsp;</div>

            <!-- Content -->
            <div id="content">

                <!-- Box -->
                <div class="box">
                    <!-- Box Head -->
                  
                    <!-- End Box Head -->
                    <!-- Table -->
                    <div class="table">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>

                                <th>Наслов</th>
                                <th></th>
                                <th></th>
                            </tr>

                            @foreach (var item in ViewBag.OnePageOfProducts)
                            {
                                <tr>


                                    <td><h3><a href="#">@item.Title</a></h3></td>

                                    <td>
                                        <a href="@Url.Action("DeleteFAQ", "Admin", new { id = item.Id })" class="ico del">Избриши</a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditFAQ", "Admin", new { id = item.Id })" class="ico edit">Измени</a>
                                    </td>
                                </tr>


                            }

                            @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("FAQ", "Admin", new { page }))

                        </table>


                        <!-- Pagging -->
                        <div class="pagging">

                        </div>
                        <!-- End Pagging -->

                    </div>
                    <!-- Table -->

                </div>
                <!-- End Box -->
