@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using BagsStore.Models

@{
    GaleryItem item = ViewBag.item;
    
}

<div id="container" style="width:100%">
    <div class="shell">

        <!-- Small Nav -->
        <!-- End Small Nav -->
        <!-- Message OK -->
        <!-- End Message Error -->
        <br />
        <!-- Main -->
        <div id="main">
            <div class="cl">&nbsp;</div>

            <!-- Content -->
            <div id="content">

                <!-- Box -->
                <!-- End Box -->
                <!-- Box -->
                <div class="box">
                    <!-- Box Head -->
                    <div class="box-head">
                        <h2>Измени</h2>
                    </div>
                    <!-- End Box Head -->
                    @using (Html.BeginForm(
                    null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="dateInsert" value="@item.CreatedDate" />
                        <input type="hidden" name="admin" value="@item.CreatedBy" />
                        <input type="hidden" name="act" value="@item.IsDeleted.Value.ToString()" />

                        <!-- Form -->
                        <div class="form">
                            <p>
                                <label>Внеси наслов</label>
                                <input required type="text" name="Name" class="field size1" value="@item.Name" />
                            </p>

                            <p>
                                @foreach (GaleryImage g in ViewBag.images)
                                {
                                    <img src="~/Images/@item.Name/@g.BigImage" width="200" height="200" />
                                    
                                    <a href="@Url.Action("DeleteImage","Admin",new { id = g.Id })">
                                        Избриши слика
                                    </a>
                                }
                            </p>
                           
                          

                            <p>
                                <label>Слика</label>
                                <input  type="file" name="Picture" />
                            </p>

                           

                            <p>
                                <label>Внеси опис на сликата</label>
                                <input  type="text" name="imgDesc" class="field size1" />
                            </p>




                        </div>
                        <!-- End Form -->
                        <!-- Form Buttons -->
                        <div class="buttons">
                            <input type="submit" class="button" value="Измени" />
                        </div>
                        <!-- End Form Buttons -->
                    }
                </div>
                <!-- End Box -->

            </div>
            <!-- End Content -->
            <!-- Sidebar -->
            <!-- End Sidebar -->

            <div class="cl">&nbsp;</div>
        </div>
        <!-- Main -->
    </div>
</div>