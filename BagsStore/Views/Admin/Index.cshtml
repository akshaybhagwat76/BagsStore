
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using PagedList.Mvc;
@using PagedList;
@using BagsStore.Models;

<!-- import the included stylesheet for some (very basic) default styling -->
