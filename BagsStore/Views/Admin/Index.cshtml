                                <th></th>
                            </tr>

                            @foreach (Reservation item in ViewBag.OnePageOfProducts)
                            {
                            <tr>
  
                               
                                <td><h3><a href="#">@item.StoreName</a></h3></td>
                                <td><h3><a href="#">@item.Name @item.Surname</a></h3></td>
                                <td>@item.Date</td>
                                <td>
                                    <a href="/Admin/DownloadPDF/@item.Id" class="ico del">Превземи</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("View", "Admin", new { id = item.Id })" class="ico edit">Види детално</a>
                                </td>
                            </tr>
                           

                            }

                            @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", "Admin", new { page }))
                         
