
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using BagsStore.Models


<div id="container" style="width:100%">
    <div class="shell">

        <!-- Small Nav -->
        <!-- End Small Nav -->
        <!-- Message OK -->
        <!-- End Message Error -->
        <br />
        <!-- Main -->
        <div id="main">
            <div class="cl">&nbsp;</div>

            <!-- Content -->
            <div id="content">

                <!-- Box -->
                <!-- End Box -->
                <!-- Box -->
                <div class="box">
                    <!-- Box Head -->
                    <div class="box-head">
                        <h2>Додади</h2>
                    </div>
                    <!-- End Box Head -->

                    @using (Html.BeginForm(
                    null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <!-- Form -->
                        <div class="form">

                            <p>
                                <label>Внеси наслов</label>
                                <input required type="text" name="title" class="field size1" />
                            </p>


                            <p>
                                <label>Краток опис</label>
                                <textarea id="editor1" name="shortDesc"></textarea>
                                <script type="text/javascript">
                                    CKEDITOR.replace('editor1',
                                         {
                                             filebrowserImageBrowseUrl: '/ckfinder/ckfinder.html?type=Images',
                                             filebrowserUploadUrl: '/ckfinder/core/connector/aspx/connector.aspx?       command=QuickUpload&type=Files',
                                             filebrowserImageUploadUrl: '/Admin/Upload'

                                         }

                                     );
                                </script>

                            </p>

                            <p>
                                <label>Главна содржина</label>
                                <textarea id="editor2" name="Content"></textarea>
                                <script type="text/javascript">
                                    CKEDITOR.replace('editor2',
                                     {
                                         filebrowserImageBrowseUrl: '/ckfinder/ckfinder.html?type=Images',
                                         filebrowserUploadUrl: '/ckfinder/core/connector/aspx/connector.aspx?       command=QuickUpload&type=Files',
                                         filebrowserImageUploadUrl: '/Admin/Upload'

                                     }

                                     );
                                </script>

                            </p>



                            <p>
                                <label>Слика</label>
                                <input required type="file" name="Picture" />
                            </p>


                        </div>
                        <!-- End Form -->
                        <!-- Form Buttons -->
                        <div class="buttons">
                            <input type="submit" class="button" value="Додади" />
                        </div>
                        <!-- End Form Buttons -->
                    }
                </div>
                <!-- End Box -->

            </div>
            <!-- End Content -->
            <!-- Sidebar -->
            <!-- End Sidebar -->

            <div class="cl">&nbsp;</div>
        </div>
        <!-- Main -->
    </div>
</div>