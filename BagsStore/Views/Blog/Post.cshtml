@model BagsStore.Models.ItemContent
@using BagsStore.Models;

@section HeaderContent{
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="" />
    <meta property="og:url" content="https://bagtostore.com/blog/post/@Model.Id" />
    <meta property="og:image" content="https://bagtostore.com/Images/@Model.BigImage" />
}

<div class="breadcrumb-section">

</div>

<div class="page-wrapper">
    <div class="container">
        <div class="row mt-3">
            <div class="col-12 col-lg-8">
                <div class="blog-details">
                    <div class="image">
                        <img class="img-fluid" src="~/Images/@Model.BigImage" alt="">
                    </div>
                    <div class="content">

                        <h1 class="title">
                            @Model.Title
                        </h1>
                        <div class="description">
                            @Html.Raw(Model.Content)
                        </div>
                        <div class="">

                            <div class="clearfix">

                                <div class="share">
                                    <p class="header">Share:</p>
                                     <div class="social">
                                         <a href="http://www.facebook.com/sharer.php?u=http://thewinningskill.com/blogpost/@Model.Id" title="Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                         <a href="https://twitter.com/share?url=http://thewinningskill.com/blogpost/@Model.Id&amp;text=Simple%20Share%20Buttons&amp;hashtags=simplesharebuttons" target="_blank" title="Twitter"><i class="fab fa-twitter"></i></a>
                                     </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <aside class="col-12 col-lg-4 sidebar">

                <div class="sidebar-box">
                    <p class="sidebar-title">Other Articles</p>
                    <div class="sidebar-news">
                        @foreach (ViewItem item in ViewBag.items)
                        {
                            <div class="post">
                                <div class="image">
                                    <a href="/blog/post/@item.Id"><img src="~/Images/@item.Image" alt="Travel"></a>
                                </div>
                                <div class="content">
                                    <a class="title" href="/blog/post/@item.Id">@item.Title</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>



            </aside>
        </div>
    </div>
</div>

