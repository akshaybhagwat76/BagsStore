@model BagsStore.Models.GeneratePDFModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Invoice</title>

    <style>

        * {
            font-size: 18px;
        }
    </style>

</head>
<body>
    <div class="col-md-12">

        <div style="width:40%">

        </div>


        <div>
            <div style="float:left;width:20%;padding-top:25px">
                <img src="~/Images/70x50.png" style="width:70%" />
            </div>
            <h4 class="text" style="float:left;width:40%;font-size:25px">
                Thank you<br />
                FOR YOUR BOOKING!
            </h4>

            <br />

        </div>
        <br /><br /><br />
        <div style="width:30%;float:left;clear:left">
            <p style="font-weight:bold">
                YOUR BOOKING DETAILS
            </p>

            <p>
                <b>Name</b> @Model.Name
            </p>
            <p>
                <b>Last name</b> @Model.LastName
            </p>
            <p>
                <b>Order n°:</b>  #@Model.Number
            </p>
            @if (Model.PaymentMethod.Equals("Store"))
        {
            <p>
                <b>For payment:</b> €@Model.Price
            </p>
    }
    else
    {
        <p>
            <b>Paid:</b> €@Model.Price
        </p>
}


            <p>
                <b>Drop off</b> : @Model.DropOff
            </p>

            <p>
                <b>Pick Up</b> : @Model.PickUp
            </p>

            <p>
                <b>Bags</b>: @Model.Bags
            </p>
        </div>
        <div style="width:70%;float:left;padding-top:5px;text-align:center">
            <img src="~/Images/@Model.MapPicture" style="width:80%" />
        </div>
        <hr style="clear:left" />
        <p style="font-weight:bold;clear:left">
            GO HERE TO STORE YOUR BAGS
        </p>

        <p>
            <b>Shop name</b> : @Model.Additional

        <p>
            <b>Address</b>: @Model.Street
        </p>

        <p>
            Open in <a href="@Model.Link">Google Maps</a>
            (<a href="@Model.Link">@Model.Link</a>)
        </p>

        <p>
            Opening times: @Model.WHours
        </p>
        <hr />
        <p style="font-weight:bold">
            SHOP CONTACT DETAILS
        </p>

        <p>
            <b>Telephone number</b> : +386 51 847 142
            <img src="~/Images/whatsapp.png" width="22" height="22" style="margin-bottom:-2px" />
            <img src="~/Images/viber.png" width="18" height="18" />
            <img src="~/Images/telegram.png" width="18" height="18" />
        </p>

        <p>
            <b>Email</b> : @Model.EmailConf
        </p>
        <hr />
        <p style="font-weight:bold">
            ADDITIONAL INFORMATION
        </p>

        <p>
           P.S. Some of our LuggagePoints offer discount for their services. Ask them!
        </p>
        <br /><br />
        <p style="font-weight:bold;text-align:center">
            Problems or questions?
        </p>

        <div>
            <span style="float:left;width:20%;margin-top:-66px">
                <img src="~/Images/pdf3.png" />
            </span>

            <span style="float:left;width:80%">
                Please contact us at info@bagtostore.com
                (mailto:info@bagtostore.com) or use the chat support on website:
                <a href="https://bagtostore.com">bagtostore.com</a> (<a href="https://bagtostore.com">https://bagtostore.com</a>).
            </span>
        </div>


    </div>
</body>
</html>
